#ifndef VERSION_H
#define VERSION_H

namespace Memento
{
    /* Major version number */
    constexpr unsigned int VERSION_MAJOR{@PROJECT_VERSION_MAJOR@};

    /* Minor version number */
    constexpr unsigned int VERSION_MINOR{@PROJECT_VERSION_MINOR@};

    /* Patch version number */
    constexpr unsigned int VERSION_PATCH{@PROJECT_VERSION_PATCH@};

    /* Tweak version number */
    constexpr unsigned int VERSION_TWEAK{@PROJECT_VERSION_TWEAK@};

    /* Complete version string. Does not contain v */
    constexpr const char *VERSION{"@PROJECT_VERSION@"};

    /* Git version hash. Empty if RELEASE_BUILD=ON. */
    constexpr const char *VERSION_HASH{"@MEMENTO_VERSION_HASH@"};
}

#endif // VERSION_H
